<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>05-02</title>
  <script src="https://unpkg.com/vue/dist/vue.min.js"></script>
</head>
<body>
<div id="example">
	<table>
		<col width="100%"/>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>red</div>
			</td>
		</tr>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>orange</div>
			</td>
		</tr>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>yellow</div>
			</td>
		</tr>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>green</div>
			</td>
		</tr>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>blue</div>
			</td>
		</tr>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>indigo</div>
			</td>
		</tr>
		<tr :style="style1" @mouseover.stop="overEvent" @mouseout.stop="outEvent">
			<td>
				<div>purple</div>
			</td>
		</tr>
	</table>
</div>
<script type="text/javascript">
var vm = new Vue({
  el : "#example",
  data : {
    style1: {backgroundColor:"red", border:'solid 1px gray', textAlign:'center'}
  },
  methods : {
    overEvent : function(e) {
      var target = e.target.innerHTML;
      this.style1.backgroundColor = target;
    },
    outEvent : function(e) {
      this.style1.backgroundColor = "white";
      this.style1.color = "black";
    }
  }
})
</script>
</body>
</html>