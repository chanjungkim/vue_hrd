<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>04-11</title>
  <style>
   html, body { margin: 0;padding: 0; }
   #example {
    height: 98vh; min-height: 100%; padding:10px
   }
  </style>
  <script src="https://unpkg.com/vue/dist/vue.min.js"></script>
</head>
<body>
<div id="example" v-on:contextmenu.prevent="ctxStop">
	<input type="text" @keyup="pressKey"/>
    <div>
      Left: 왼쪽으로<br /> 
      Right: 오른쪽으로<br /> 
      Up: 위로<br /> 
      Down: 아래로
    </div>
    <img src="images/foot.jpg" v-bind:style="{ position:'absolute', left: pos.left + 'px', top:pos.top +'px' }" />
</div>
<script type="text/javascript">
var vm = new Vue({
    el : "#example",
    data : {
      pos : { left : 100, top:100 }
    },
    methods: {
        ctxStop : function(e) { },
        pressKey : function(e) {
        	switch(e.keyCode){
        	case 38:
        		// up
        		this.pos.top -= 100;
        		break;
        	case 40:
        		// down
        		this.pos.top += 100;
        		break;
        	case 39:
        		// right
        		this.pos.left += 100;
        		break;
        	case 37:
        		this.pos.left -= 100;
        		break;
        	}
        }
    }
})
</script>
</body>
</html>